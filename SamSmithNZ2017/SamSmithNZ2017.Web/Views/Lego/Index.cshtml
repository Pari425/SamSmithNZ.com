@{
    Layout = "~/Views/Shared/_LayoutLego.cshtml";
}

<div ng-controller="indexController">
    <div class="row">
        <div class="col-md-12">
            <table class="table table-striped table-bordered">
                <tr>
                    <th>Set name</th>
                    <th>Year</th>
                    <th>Theme</th>
                    <th>Number of parts</th>
                </tr>
                <tr ng-repeat="item in sets">
                    <td>
                        <a href="/Lego/Set?setNum={{item.SetNum}}">{{item.SetName}}</a>
                    </td>
                    <td>
                        {{item.SetYear}}
                    </td>
                    <td>
                        {{item.ThemeName}}
                    </td>
                    <td>
                        {{item.NumberOfParts}}
                    </td>
                </tr>
            </table>
        </div>
    </div>
</div>