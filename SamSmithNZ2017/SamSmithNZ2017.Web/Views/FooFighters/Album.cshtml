@{
    Layout = "~/Views/Shared/_LayoutFooFighters.cshtml";
}

<div ng-controller="albumController">
    <div class="row">
        <div class="col-md-6">
            <h2>{{album.AlbumName}}</h2>
            <table>
                <tr>
                    <td>
                        <span style="font-weight: bold;">Year Released:</span>
                    </td>
                    <td>
                        {{album.AlbumReleaseDate | date:'yyyy'}}
                    </td>
                </tr>
                <tr>
                    <td colspan="2">
                        <img ng-src="~/Content/FooFighters/AlbumCovers/{{album.AlbumImage}}" alt="" style="width: 140px; height:140px;" />
                    </td>
                </tr>
            </table>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <span style="font-weight: bold;">Track list:</span>
            <table class="table table-striped table-bordered">
                <tr>
                    <th></th>
                    <th>Song</th>
                    <th>First Show Played</th>
                    <th>Last Show Played</th>
                    <th>Times Played Live</th>
                </tr>
                <tr ng-repeat="item in songs">
                    <td>{{item.SongOrder}}</td>
                    <td><a href="/FooFighters/Song/GetSong?SongCode={{item.SongCode}}">{{item.SongName}}</a></td>
                    <td ng-if="item.FirstPlayedShowCode <= 0">None Known</td>
                    <td ng-if="item.FirstPlayedShowCode > 0"><a href="/FooFighters/Show/GetShow?ShowCode={{item.FirstPlayedShowCode}}">{{item.FirstPlayed | date:'dd-MMM-yyyy'}}</a></td>
                    <td ng-if="item.LastPlayedShowCode <= 0">None Known</td>
                    <td ng-if="item.LastPlayedShowCode > 0"><a href="/FooFighters/Show/GetShow?ShowCode={{item.LastPlayedShowCode }}">{{item.LastPlayed | date:'dd-MMM-yyyy'}}</a></td>
                    <td>{{item.TimesPlayed}}</td>
                </tr>
            </table>
        </div>
    </div>
</div>
